# ============================
# Accountant for Pi | محاسب باي
# Example Environment Variables
# ============================

# ----------------------------
# App Configuration
# ----------------------------
APP_NAME=Pi Accountant
APP_ENV=development   # Options: development, production
APP_PORT=3000         # Change the port if needed

# ----------------------------
# Pi Network Integration
# ----------------------------
# Get these from Pi Developer Portal (https://develop.pi in Pi Browser)
PI_API_KEY=your_pi_api_key_here     # Do not share publicly
PI_APP_ID=your_pi_app_id_here       # Assigned by Pi Developer Portal

# Platform API
PLATFORM_API_URL=https://api.minepi.com

# ----------------------------
# Database Configuration
# ----------------------------
# Example: mongodb://localhost:27017/pi_accountant
MONGO_HOST=localhost:27017
MONGO_DB_NAME=pi_accountant
MONGO_USERNAME=your_username_here
MONGO_PASSWORD=your_password_here

# ----------------------------
# Frontend App URL
# ----------------------------
FRONTEND_URL=http://localhost:3000

# ----------------------------
# Security
# ----------------------------
SESSION_SECRET=your_secret_key_here   # Strong random string for sessions/JWT

# ----------------------------
# Debugging
# ----------------------------
ENABLE_DEBUG=true   # true/false. Disable in production
